{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/I",
                "${workspaceFolder}/include",
                "/nologo",
                "/Fe${workspaceFolder}/bin/${fileBasenameNoExtension}.exe",
                "/Fo${workspaceFolder}/bin/",
                "/Fd${workspaceFolder}/bin/",
                "${file}",
                "/link",
                "/LIBPATH:${workspaceFolder}/lib",
                "raylib.lib",
                "raylibdll.lib",
                "opengl32.lib",
                "gdi32.lib",
                "shell32.lib",
                "user32.lib",
                "kernel32.lib",
                "msvcrt.lib",
                "winmm.lib",
                "/NODEFAULTLIB:libcmt.lib",
                "/SUBSYSTEM:WINDOWS"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}